@model SignInVM
@{
    ViewData["Title"] = "SignIn";
}

<div class="page-content pt-20 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-6 col-md-8">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Log In</h1>
                                    <p class="mb-30">U want to Register? <a asp-action="Register">Register</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group ">
                                        <input asp-for="UserNameOrEmail" placeholder="UserNameOrEmail" />
                                        <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>

                                    </div>
                                    <div class="form-group ">
                                        <input asp-for="Password" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div >
                                        <label asp-for="RememberMe" class="form-check-label">Save</label>
                                        <input class="form-check-input" asp-for="RememberMe"/>
                                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                                    </div>
                                    <div class="text-danger" asp-validation-summary="ModelOnly">

                                    </div>
                                    <div class="form-group mb-30">
                                        <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Submit &amp; Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationParital.cshtml">
}
